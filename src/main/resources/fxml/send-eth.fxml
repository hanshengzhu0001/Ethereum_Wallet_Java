<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ethereum.wallet.ui.controller.SendEthController" spacing="15.0" prefWidth="450.0" prefHeight="400.0">
   <children>
      <Label styleClass="dialog-header" text="Send ETH" />
      
      <VBox spacing="10.0" styleClass="wallet-info">
         <children>
            <Label text="From:" />
            <Label fx:id="fromWalletLabel" styleClass="wallet-name" />
            <Label fx:id="balanceLabel" styleClass="wallet-balance" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
      
      <VBox spacing="10.0">
         <children>
            <Label text="To Address:" />
            <TextField fx:id="toAddressField" promptText="Enter recipient address (0x...)" />
         </children>
      </VBox>
      
      <VBox spacing="10.0">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label text="Amount (ETH):" />
                  <Region HBox.hgrow="ALWAYS" />
                  <Button fx:id="maxButton" mnemonicParsing="false" styleClass="secondary-button" text="Max" />
               </children>
            </HBox>
            <TextField fx:id="amountField" promptText="Enter amount in ETH" />
         </children>
      </VBox>
      
      <VBox spacing="10.0">
         <children>
            <CheckBox fx:id="customGasCheckBox" mnemonicParsing="false" text="Custom Gas Settings" />
            <TextField fx:id="gasPriceField" promptText="Gas price in Gwei" />
            <TextField fx:id="gasLimitField" promptText="Gas limit" />
         </children>
      </VBox>
      
      <VBox spacing="10.0">
         <children>
            <Label text="Password:" />
            <PasswordField fx:id="passwordField" promptText="Enter wallet password" />
         </children>
      </VBox>
      
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <ProgressIndicator fx:id="loadingIndicator" prefHeight="20.0" prefWidth="20.0" />
            <Label fx:id="statusLabel" />
         </children>
      </HBox>
      
      <HBox alignment="CENTER_RIGHT" spacing="10.0">
         <children>
            <Button fx:id="cancelButton" mnemonicParsing="false" text="Cancel" />
            <Button fx:id="sendButton" mnemonicParsing="false" styleClass="primary-button" text="Send ETH" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
