<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ethereum.wallet.ui.controller.MainController">
   <top>
      <ToolBar prefHeight="40.0">
         <items>
            <Button fx:id="createWalletButton" mnemonicParsing="false" text="Create Wallet" />
            <Button fx:id="importWalletButton" mnemonicParsing="false" text="Import Wallet" />
            <Separator orientation="VERTICAL" />
            <Button fx:id="sendEthButton" mnemonicParsing="false" text="Send ETH" />
            <Separator orientation="VERTICAL" />
            <Button fx:id="refreshButton" mnemonicParsing="false" text="Refresh" />
            <Region HBox.hgrow="ALWAYS" />
            <ProgressIndicator fx:id="loadingIndicator" prefHeight="20.0" prefWidth="20.0" />
         </items>
      </ToolBar>
   </top>
   <left>
      <VBox prefWidth="300.0" spacing="10.0">
         <children>
            <Label styleClass="section-header" text="Wallets" />
            <ListView fx:id="walletListView" prefHeight="200.0" VBox.vgrow="ALWAYS" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </left>
   <center>
      <VBox spacing="10.0">
         <children>
            <HBox spacing="10.0" styleClass="wallet-info">
               <children>
                  <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Label styleClass="section-header" text="Selected Wallet" />
                        <Label fx:id="selectedWalletName" styleClass="wallet-name" text="No wallet selected" />
                        <Label fx:id="selectedWalletAddress" styleClass="wallet-address" text="" />
                        <Label fx:id="selectedWalletBalance" styleClass="wallet-balance" text="" />
                     </children>
                  </VBox>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
            <VBox spacing="10.0" VBox.vgrow="ALWAYS">
               <children>
                  <Label styleClass="section-header" text="Transaction History" />
                  <TableView fx:id="transactionTable" VBox.vgrow="ALWAYS">
                     <columns>
                        <TableColumn fx:id="txHashColumn" prefWidth="100.0" text="Tx Hash" />
                        <TableColumn fx:id="fromAddressColumn" prefWidth="120.0" text="From" />
                        <TableColumn fx:id="toAddressColumn" prefWidth="120.0" text="To" />
                        <TableColumn fx:id="amountColumn" prefWidth="100.0" text="Amount" />
                        <TableColumn fx:id="statusColumn" prefWidth="80.0" text="Status" />
                        <TableColumn fx:id="dateColumn" prefWidth="150.0" text="Date" />
                     </columns>
                  </TableView>
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </center>
   <bottom>
      <HBox alignment="CENTER_LEFT" prefHeight="30.0" spacing="10.0">
         <children>
            <Label fx:id="statusLabel" text="Ready" />
         </children>
         <padding>
            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>
